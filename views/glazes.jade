extends layout

block content
  .container
    .row
      .medium-1.columns.main.show-for-medium-up.primary-nav
        if currentUser
          button#user
            img(src='../images/user.png')
            p.light-text.font-small #{currentUser}
        form(action='/glazes/show-all' method='get')
          button(type='submit') 
            img(src='../images/recipes.png')
            p.light-text.font-small Recipes
        form(action='/glazes/firing-temp' method='get')
          button(type='submit')
            img(src='../images/cone.png')
            p.light-text.font-small Cone
        form(action='/glazes/surface' method='get')
          button(type='submit')
            img(src='../images/surface.png')
            p.light-text.font-small Surface
        
      .medium-4.columns.main.secondary-nav
        form(action='/glazes/show-all' method='get')
          button#top(type='submit') 
            h3 All Recipes
        form(action='/glazes/favorites' method='get')
          button#middle(type='submit')
            h3 Favorites
        form(action='/glazes/recently-added' method='get')
          button#bottom(type='submit')
            h3 Recently Added
        hr
        if firingTemp
          include includes/secondary-nav/firing-temps
        else if surface
          include includes/secondary-nav/surface
          
      .medium-7.columns.main.content
        .row.header
          .medium-push-7.medium-3.columns.search-bar
            input(type='text' placeholder='Search' name='search')
            button(type='submit') 
              i.fa.fa-search 
          .medium-2.columns.logout
            if currentUser
              form(action='/logout' method='post')
                button(type='submit') Logout
        .row
          .medium-12.columns
            if recipes
              include includes/glazes/show-all
            else if oneRecipe
              include includes/glazes/show-one
            else if editRecipe
              include includes/glazes/edit
            else if favRecipe
              include includes/glazes/favorites
            else if lowRecipe
              include includes/glazes/low-range
            else if midRecipe
              include includes/glazes/mid-range
            else if highRecipe
              include includes/glazes/high-range
            else if shinyRecipe
              include includes/glazes/shiny
            else if semiRecipe
              include includes/glazes/semi
            else if satinRecipe
              include includes/glazes/satin
            else if matteRecipe
              include includes/glazes/matte
            else if dryRecipe
              include includes/glazes/dry
            else
              include includes/glazes/new





