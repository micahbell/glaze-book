.row  
  .medium-12.columns
    h1 Add a Glaze Recipe

form(action='/show-all' method='post')
  .row.new-title
    .medium-10.columns
      label(for='title') Title
      input(type='text' id='title' name='title' required)
    .medium-2.columns
      label(for='favorite') Favorite 
      input(type='checkbox' id='favorite' name='favorite')
      i.fa.fa-heart-o
      i.fa.fa-heart
  
  .row.dropdowns
    .medium-6.columns
      .row
        .medium-12.columns
          p Firing
        .medium-12.columns
          select(id='temp-range' name='temp_range' required)        
            option(disabled selected) Temperature Range
            option Low Fire
            option Mid Range
            option High Fire
        .medium-12.columns
          select(id='cone' name='cone' required)
            option(disabled selected) Cone
            option ∆ 022
            option ∆ 021
