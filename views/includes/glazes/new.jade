            option ∆ 8
            option ∆ 9 
            option ∆ 10
            option ∆ 11
            option ∆ 12
            option ∆ 13
            option ∆ 14
            option ∆ 15
        .medium-12.columns
          select(id='firing-type' name='firing_type' required)
            option(disabled selected) Type of Firing
            option Oxidation
            option Reduction
            option Raku
            option Salt or Soda
            option Wood
            option Lustre
            option Saggar
      
    .medium-6.columns
      .row
        .medium-12.columns
          p Appearance
        .medium-12.columns
          select(id='surface' name='surface' required)
            option(disabled selected) Surface
            option Shiny or Glossy
            option Semi-Gloss
            option Semi-Matte or Satin
            option Matte
            option Dry Matte
        .medium-12.columns
          select(id='opacity' name='opacity' required)
            option(disabled selected) Opacity
            option Transparent
            option Translucent
            option Opaque
        .medium-12.columns
          select(id='color' name='color' required)
            option(disabled selected) Color
            option No Color
            option White
            option Gray
            option Black
            option Brown
            option Red
            option Orange
            option Yellow
            option Green
            option Blue-Green
            option Blue
            option Purple
   
  .row
    .medium-7.columns
      .row
        .medium-9.columns
          label(for='ingredients') Base Ingredients
          br
          input(type='text' id='ingredients' name='ingredient_1')
          input(type='text' id='ingredients' name='ingredient_2')
          input(type='text' id='ingredients' name='ingredient_3')
          input(type='text' id='ingredients' name='ingredient_4')
          input(type='text' id='ingredients' name='ingredient_5')
          input(type='text' id='ingredients' name='ingredient_6')
          input(type='text' id='ingredients' name='ingredient_7')
          input(type='text' id='ingredients' name='ingredient_8')
          input(type='text' id='ingredients' name='ingredient_9')
          input(type='text' id='ingredients' name='ingredient_10')
        .medium-3.columns
          label(for='amount') Amount
          br
          input(type='text' id='amount' name='amount_1')
          input(type='text' id='amount' name='amount_2')
          input(type='text' id='amount' name='amount_3')
          input(type='text' id='amount' name='amount_4')
          input(type='text' id='amount' name='amount_5')
          input(type='text' id='amount' name='amount_6')
          input(type='text' id='amount' name='amount_7')
          input(type='text' id='amount' name='amount_8')
          input(type='text' id='amount' name='amount_9')
          input(type='text' id='amount' name='amount_10')
      .row
        .medium-9.columns
          label(for='add-ingredients') Additional Ingredients
          br
          input(type='text' id='add-ingredients' name='add_in_1')
          input(type='text' id='add-ingredients' name='add_in_2')
          input(type='text' id='add-ingredients' name='add_in_3')
          input(type='text' id='add-ingredients' name='add_in_4')
          input(type='text' id='add-ingredients' name='add_in_5')
          input(type='text' id='add-ingredients' name='add_in_6')
        .medium-3.columns
          label(for='add-amounts') Amount
          br
          input(type='text' id='add-amounts'  name='add_amount_1')
          input(type='text' id='add-amounts'  name='add_amount_2')
          input(type='text' id='add-amounts'  name='add_amount_3')
          input(type='text' id='add-amounts'  name='add_amount_4')
          input(type='text' id='add-amounts'  name='add_amount_5')
          input(type='text' id='add-amounts'  name='add_amount_6')
          
    .medium-5.columns
      .row
        .medium-12.columns
          label(for='notes') Notes
          br  
          textarea(rows=6 id='notes' name='notes')
      
      .row
        .medium-12.columns
          p Additional Information
        .medium-12.columns
          select(id='specialty' name='specialty')
            option(disabled selected) Specialty Glaze
            option Crystalline
            option Metallic
            option Luster
            option Texture
            option Rivulet
            option Slip
            option Stain
            option Engobe
        
        .medium-12.columns
          select(id='test-status' name='test_status')
            option(disabled selected) Test Status
            option Tested
            option Untested
            option In Progress
            
        .medium-12.columns
          label(for='image') Upload Image
          input(type='file' id='image' placeholder='Select File' name='image')
  
  .row
    .medium-12.columns
      input(type='submit' value="Add New Recipe")
      
.row
  .medium-12.columns.footer  
    p Footer
